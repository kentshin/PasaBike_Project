<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_request">

    <RelativeLayout
        android:id="@+id/main_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEFD0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_head"
            android:layout_marginBottom="60dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/inner_main"
                    android:layout_width="match_parent"
                    android:layout_height="425dp"
                    android:padding="5dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/second"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_below="@id/first"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:padding="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:id="@+id/dos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="5dp">

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/label3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/aldrich"
                                    android:text="PADELIVER"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:padding="10dp">


                                <ImageView
                                    android:id="@+id/record_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/deliver" />


                            </RelativeLayout>


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/first"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:id="@+id/uno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="5dp">


                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/customer_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/aldrich"
                                    android:text="PASABUY"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true">


                                <ImageView
                                    android:id="@+id/time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    app:srcCompat="@drawable/buy_store" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </ScrollView>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/top_head"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E6E472"
            android:backgroundTint="#E6E472"
            android:padding="10dp"
            app:cardElevation="10dp"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">


                <RelativeLayout
                    android:id="@+id/label_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/customer_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/imageView7"
                        android:fontFamily="@font/aldrich"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/customer" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/label_holder2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_holder"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/customer_addres"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/image_address"
                        android:fontFamily="@font/aldrich"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_address"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/c_house" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/edit_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/label_holder2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/edit_loc" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</RelativeLayout>