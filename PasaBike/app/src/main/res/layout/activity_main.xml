<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_label"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_color"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/phone_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/cc"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="#F2F3D7"
            android:ems="10"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="+63"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/cc"
            android:background="#F2F3D7"
            android:ems="10"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:hint="10 Digit Phone Number"
            android:inputType="phone"
            android:textColor="#403B3B"
            android:textSize="14sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/otp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/phone_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:background="@drawable/round"
        android:elevation="3dp"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:hint="Enter OTP"
        android:inputType="number"
        android:textColor="#403B3B"
        android:textSize="14sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:elevation="15dp"
        android:fontFamily="sans-serif-black"
        android:text="Generate OTP"
        android:textColor="#FFFFFF"
        app:backgroundTint="#63B567"
        app:cornerRadius="20dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/aldrich"
        android:text="ANYTHING AT YOUR DOORSTEP"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@id/textView6"
        app:srcCompat="@drawable/bike_trans" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/phone_holder"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aldrich"
        android:text="MOBILE APPLICATION"
        android:textColor="#493939"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/aldrich"
        android:text="ORDER AND DELIVERY REQUEST"
        android:textColor="#493939"
        android:textSize="16sp" />
</RelativeLayout>